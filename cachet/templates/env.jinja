{% from "cachet/map.jinja" import cachet with context %}
{%- set config = cachet.config %}

APP_ENV={{ config.get('app_env') }}
APP_DEBUG={{ config.get('app_debug') }}
APP_URL={{ config.get('app_url') }}
APP_KEY={{ config.get('app_key') }}

DB_DRIVER={{ config.get('db_driver') }}
DB_HOST={{ config.get('db_host') }}
DB_DATABASE={{ config.get('db_database') }}
DB_USERNAME={{ config.get('db_username') }}
DB_PASSWORD={{ config.get('db_password') }}

CACHE_DRIVER={{ config.get('cache_driver') }}
SESSION_DRIVER={{ config.get('session_driver') }}
QUEUE_DRIVER={{ config.get('queue_driver') }}
CACHET_EMOJI={{ config.get('cachet_emoji') }}

MAIL_DRIVER={{ config.get('mail_driver') }}
MAIL_HOST={{ config.get('mail_host') }}
MAIL_PORT={{ config.get('mail_port') }}
MAIL_USERNAME={{ config.get('mail_username') }}
MAIL_PASSWORD={{ config.get('mail_password') }}
MAIL_ADDRESS={{ config.get('mail_address') }}
MAIL_NAME={{ config.get('mail_name') }}
MAIL_ENCRYPTION={{ config.get('mail_encryption') }}

REDIS_HOST={{ config.get('redis_host') }}
REDIS_DATABASE={{ config.get('redis_database') }}
REDIS_PORT={{ config.get('redis_port') }}

GITHUB_TOKEN={{ config.get('github_token') }}
